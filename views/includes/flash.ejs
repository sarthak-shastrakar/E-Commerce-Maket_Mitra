<!-- for success flash -->
<% if(success && success.length) {%>
<div
  class="alert alert-success alert-dismissible fade show col-8 offset-2"
  role="alert"
>
  <%= success %>
  <span
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></span>
</div>
<% } %>

<!-- for delete flash -->
<% if(error && error.length) {%>
<div
  class="alert alert-danger alert-dismissible fade show col-8 offset-2"
  role="alert"
>
  <%= error %>
  <span
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></span>
</div>
<% } %>
