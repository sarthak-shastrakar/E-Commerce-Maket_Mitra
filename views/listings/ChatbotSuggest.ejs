<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/chatbot.css" />
<script type="module" src="/js/chatbot.js"></script>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>🛍️ MarketMitra – Your AI Shopping Buddy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="hero-heading">🤖 MarketMitra</div>
      <div class="hero-sub">
        Your personal shopping assistant! Ask things like:<br />"Best shoes
        under ₹1000", "Suggest a smart TV", "Affordable laptop"
      </div>

      <div class="chat-container">
        <div class="chat-messages" id="chat-messages">
          <div class="bot-message message">
            <img class="profile-image" src="/images/chatbot.png" alt="Bot" />
            <div class="message-content">
              👋 Hello! I'm MarketMitra. Ready to help you shop smart.
            </div>
          </div>
        </div>

        <div class="chat-input-container">
          <input
            type="text"
            id="user-input"
            class="input"
            placeholder="Type your message..."
          />
          <button id="send-button">Send</button>
        </div>

        <div class="action-buttons">
          <button id="clear-chat">🧹 Clear </button>
          <button id="edit-last">✏️ Edit </button>
        </div>
      </div>
    </div>
  </body>
</html>
