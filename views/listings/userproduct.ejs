<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/userproduct.css" />

<script>
  // Auto-Rotate Images in each image-carousel
  document.querySelectorAll(".image-carousel").forEach((carousel) => {
    const imgs = carousel.querySelectorAll(".carousel-img");
    let index = 0;

    if (imgs.length > 1) {
      setInterval(() => {
        imgs.forEach((img) => img.classList.remove("active"));
        index = (index + 1) % imgs.length;
        imgs[index].classList.add("active");
      }, Number(carousel.dataset.interval) || 3000);
    }
  });
</script>

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
/>
<link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
  rel="stylesheet"
/>
<body>
  <h1 class="product-heading animate__animated animate__fadeInDown">
    üõçÔ∏è User's Products
    <!-- <i class="fas fa-box-open"></i> -->
  </h1>

  <% if (allListings.length === 0) { %>
  <p>No products found.</p>
  <% } else { %>
  <div class="product-grid">
    <% for (let listing of allListings) { %>
    <div class="product-card" data-aos="zoom-in">
      <a href="/listings/showproduct/<%= listing._id %>">
        <div
          class="image-carousel"
          data-id="<%= listing._id %>"
          data-interval="3000"
        >
          <% if (listing.images.length > 0) { %> <% listing.images.forEach((img,
          index) => { %>
          <div class="image-wrapper">
            <img
              src="<%= img.url %>"
              alt="Product Image"
              class="carousel-img <%= index === 0 ? 'active' : '' %>"
            />
            <div class="overlay-text">Click this image</div>
          </div>
          <% }) %> <% } else { %>
          <div class="image-wrapper">
            <img
              src="https://via.placeholder.com/280x180?text=No+Image"
              alt="No Image"
              class="carousel-img active"
            />
          </div>
          <% } %>
        </div>
      </a>

      <div class="product-info">
        <h3 class="product-title animate__animated animate__fadeInDown">
          <%= listing.title %>
        </h3>
        <p><i class="fas fa-align-left"></i>&nbsp;<%= listing.description %></p>
        <p>
          <i class="fas fa-layer-group"></i>Category: <%= listing.category %>
        </p>
        <p>
          <i class="fa-solid fa-tag"></i>Price: &#8377;<%=
          listing.price.toLocaleString("en-IN") %>
        </p>
        <p style="font-weight: 500; font-size: 0.95rem; color: #444">
          üë§ <strong>Owner:</strong>
          <% if (currentUser && listing.owner?._id.toString() ===
          currentUser._id.toString()) { %>
          <span style="color: green"><%= listing.owner.name %> (You)</span>
          <% } else { %> <%= listing.owner?.name || "Unknown" %> <% } %>
        </p>

        <div class="product-actions">
          <% if (currentUser && listing.owner && listing.owner._id.toString()
          === currentUser._id.toString()) { %>
          <form
            action="/listings/<%= listing._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger p-2 px-3">Delete</button>
          </form>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark"
            >Edit</a
          >
          <% } %>

          <button
            class="buy-btn animate__animated animate__pulse animate__infinite"
          >
            <i class="fas fa-cart-plus"></i> Buy Now
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>
    AOS.init({ duration: 1000 });
  </script>
</body>
